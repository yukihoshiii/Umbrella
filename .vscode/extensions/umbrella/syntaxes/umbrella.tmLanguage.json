{
    "name": "Umbrella",
    "scopeName": "source.umbrella",
    "fileTypes": [
        "umb"
    ],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#types"
        },
        {
            "include": "#operators"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.umbrella",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.umbrella",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.umbrella",
                    "match": "\\b(if|else|while|for|return|break|continue|switch|case|default|try|catch|finally|throw|async|await)\\b"
                },
                {
                    "name": "keyword.other.umbrella",
                    "match": "\\b(let|const|function|class|new|this|extends|constructor|import|export|from)\\b"
                },
                {
                    "name": "constant.language.umbrella",
                    "match": "\\b(true|false|null|undefined)\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.umbrella",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.umbrella",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.umbrella",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.umbrella",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.umbrella",
                    "match": "\\b\\d+\\.?\\d*\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.umbrella",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.umbrella",
                    "match": "\\b(number|string|boolean|void|any|Array|Map|Database|Thread|Mutex|Process|Regex|HTTPResponse)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.umbrella",
                    "match": "(\\+|\\-|\\*|\\/|%|==|!=|<|>|<=|>=|&&|\\|\\||!|=|\\+=|\\-=|\\*=|\\/=|%=|&|\\||\\^|~|<<|>>|\\?|:)"
                }
            ]
        }
    }
}